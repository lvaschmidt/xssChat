{/* run from root directory: jsdoc -c docs/jsdoc.json */
	"opts":
	{
		"destination": "./docs/api",
		"encoding": "utf8",
		"recurse": true,
		"verbose": true
	},

    "source": 
	{
		"include": ["./options.js", "./lib/"],
		"exclude": [],
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },

	"plugins": ["plugins/markdown"],

    "templates": {
        "cleverLinks": false,
		"monospaceLinks": false,
		"default":{
			"outputSourceFiles": true
		}
    }
}