{
  "name": "xsschat",
  "version": "1.0.0",
  "description": "Chat. With XSS.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch-sass": "sass --source-map src/styles/main.scss public/styles/styles.css -w",
    "build-sass": "sass --no-source-map --style=compressed src/styles/main.scss public/styles/styles.css",
    "watch-ts": "tsc --watch --sourceMap",
    "build-ts": "tsc",
    "watch": "concurrently \"npm:watch-*\"",
    "build": "rimraf public && concurrently \"npm:build-*\" && copyfiles -f src/*.* public/"
  },
  "author": "Lysander Schmidt, Alex Foster, Jacob Singer",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "sass": "^1.58.3",
    "socket.io": "^4.5.4",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "copyfiles": "^2.4.1",
    "rimraf": "^4.1.2"
  }
}
